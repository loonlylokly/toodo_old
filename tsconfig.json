{
  "compilerOptions": {
    "outDir": "build",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "paths": {
      "utils/*": ["./src/shared/utils/*"],
      "shared/*": ["./src/shared/*"],
      "components/*": ["./src/components/*"],
      "widgets/*": ["./src/widgets/*"],
      "pages/*": ["./src/pages/*"],
      "types/*": ["./src/types/*"],
      "public/*": ["./public/*"],
      "src/*": ["./src/*"],
    },
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
    }
  }
}